
<style>
    img .zoom {
        width: 90%;
    }

        img .zoom:hover {
            width: 95%;
        }

    .active, .collapsible:hover {
        background-color: #555;
    }

    h4 .card-title:hover {
        text-decoration: none;
        width: 50%;
    }

    .content {
        padding: 0 18px;
        display: none;
        overflow: hidden;
        background-color: #f1f1f1;
    }

    .zoom {
        transition: transform .2s;
    }

        .zoom:hover {
            transform: scale(1.1);
        }
</style>

<h1 class="p-3 text-white text-center" style="margin-bottom:0px">Mis Cursos</h1>
<br />

<div class="p-3">
    <a class="btn btn-lg btn-secondary btn-block" href="/Curso/CrearCursoInterface"><i class="fas fa-plus-square"></i>  Crear Curso</a>
</div>


<div class="row">
    <div class="container">
        <div class="card-deck">
            @if (ViewBag.Cantidad != 0)
            {
                @foreach (var item in @ViewBag.CursosCreadosPorUsuario)
                {
                    <div class="col-md-4">
                        <div class="card text-white bg-secondary mb-3" style="max-width: 20rem;">
                            <img class=" card-img-top zoom" src="https://strategyco.es/wp-content/uploads/2020/10/Imagen-BlogStrategyco-202010A-JB.jpg" />
                            <div class="card-header text-center">
                                <a href="/Curso/DetalleCurso?Id=@item.Id"><h4 class="text-white">@item.Nombre</h4></a>
                            </div>
                            <div class="card-body">
                                <label>@ViewBag.Categorias[@item.Id]</label>
                            </div>
                            <div class="card-footer text-center">
                                <a class="btn btn-info" href="/Curso/AgregarVideoAlCurso?Id=@item.Id"><i class="fas fa-video"></i> Agregar video</a>
                            </div>
                            <div class="card-footer text-center">
                                <a class="btn btn-info" href="/Curso/EditarCurso?Id=@item.Id"><i class="fas fa-video"></i> Editar Curso</a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>

    </div>
</div>


@if (ViewBag.Cantidad == 0)
{
    <h2 class="text-white text-center" style="position:absolute;left:50%;top:50%;transform: translateX(-50%) translateY(-50%)">No has creado ningun curso</h2>
    <h5 class="text-white text-center" style="position:absolute;left:50%;top:53%;transform: translateX(-50%) translateY(-50%)">Crea tus cursos presionando "Crear Curso"</h5>
}
